@{
    ViewData["Title"] = "Chat";
}

<div class="container">
    <h2 class="text-center">Chat</h2>>
    <div id="messages" style="height: 300px; overflow-y: scroll; border: 1px solid #ccc; padding: 10px;">
        @foreach (var message in ViewBag.Messages)
        {
            <div>@message.UserName: @message.Text</div>
        }
    </div>
    <form method="post" action="/Message/PostMessage">
        <input type="text" name="Text" class="form-control" placeholder="Type your message..." />
        <button type="submit" class="btn btn-primary mt-2">Send</button>
    </form>
</div>