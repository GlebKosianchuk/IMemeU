@model IMemeU.Models.ChatViewModel

<h2>Chat</h2>

<div id="chat-window" style="border: 1px solid #ccc; padding: 10px; height: 300px; overflow-y: scroll;">
    @foreach (var message in Model.Messages)
    {
        <div>
            <strong>@message.UserName:</strong> @message.Text - @message.Timestamp
        </div>
    }
</div>

<form method="post" action="/Message" style="margin-top: 10px;">
    <input type="text" name="Text" placeholder="Enter your message" required style="width: 80%;" />
    <button type="submit" style="width: 18%;">Send</button>
</form>